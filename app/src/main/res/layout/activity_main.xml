<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activity.MainActivity">

    <!-- 상단 메뉴-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:id="@+id/main_topmenu_layout"
        android:layout_alignParentTop="true"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/main_topmenu_clicked_layout"
        >
    </LinearLayout>
    <!-- 중간 리스트 내용-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_topmenu_layout"
        android:layout_above="@+id/main_bottom_layout"
        android:id="@+id/main_middle_layout"
        android:orientation="horizontal">

    </LinearLayout>

    <!--메뉴바 클릭-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:id="@+id/statistics_bottom_layout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
    </LinearLayout>

    <!-- 밑에 지출 수입 통계 넘어가는 메뉴-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/main_bottom_layout"
        >
    </LinearLayout>
</RelativeLayout>
